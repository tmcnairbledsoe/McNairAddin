<Window x:Class="FillPatternEditor.PatternEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FillPatternEditor"
        Title="Pattern Editor" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Canvas to display and edit the pattern -->
        <!--<local:FillPatternViewerControlWpf Name="PatternViewer" Grid.Row="0" Margin="10"/>-->

        <!-- Bottom Panel with buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Name="SaveButton" Content="Save" Width="75" Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button Name="SaveAsButton" Content="Save As" Width="75" Click="SaveAsButton_Click" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
